@page "{memberId?}"
@model WebApp.Pages_BookReviews.CreateModel
@{
    ViewData["Title"] = "Create a Book Review";
}

<h1>Create a Review</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Book selection -->
            <div class="form-group">
                <label asp-for="BookReview.BookId" class="control-label"></label>
                <select asp-for="BookReview.BookId" class ="form-control" asp-items="ViewBag.BookList">
                </select>
            </div>

            <!-- Reviewer selection (if you want to hide it, see alternative below) -->
            <div class="form-group">
                <label asp-for="BookReview.ReviewerId" class="control-label"></label>
                <select asp-for="BookReview.ReviewerId" class ="form-control" asp-items="ViewBag.ReviewerList">
                </select>
            </div>

            <!-- Rating -->
            <div class="form-group">
                <label asp-for="BookReview.Rating" class="control-label"></label>
                <input asp-for="BookReview.Rating" class="form-control" />
                <span asp-validation-for="BookReview.Rating" class="text-danger"></span>
            </div>

            <!-- Comments -->
            <div class="form-group">
                <label asp-for="BookReview.Comments" class="control-label"></label>
                <input asp-for="BookReview.Comments" class="form-control" />
                <span asp-validation-for="BookReview.Comments" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
