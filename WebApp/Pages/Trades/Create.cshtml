@page "{memberId?}"
@model WebApp.Pages_Trades.Create
@{
    ViewData["Title"] = "Create Trade";
}

<h1>Create Trade</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- TARGET BOOK -->
            <div class="form-group">
                <label asp-for="Trade.TargetBookId" class="control-label"></label>
                <select asp-for="Trade.TargetBookId" class="form-control" asp-items="ViewBag.TargetBooks"></select>
            </div>

            <!-- CREATED AT -->
            <div class="form-group">
                <label asp-for="Trade.CreatedAt" class="control-label"></label>
                <input asp-for="Trade.CreatedAt" class="form-control" />
                <span asp-validation-for="Trade.CreatedAt" class="text-danger"></span>
            </div>
            <!-- OFFERED BOOK -->
            <div class="form-group">
                <label asp-for="Trade.OfferedBookId" class="control-label"></label>
                <select asp-for="Trade.OfferedBookId" class="form-control" asp-items="ViewBag.OfferedBooks"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
